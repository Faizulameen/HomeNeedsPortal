
<div class="card">
  <div class="card-body">
    <h2 class='card-title d-flex justify-content-between mb-4'></h2>
    <form class="form-inline my-2 my-lg-0" action="/searc">
<input class="form-control mr-sm-2" name="q" type="text" placeholder="Search Project" aria-label="Search">
<button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
</form>

<div class="container">
  <div class="row">
    <div class="col-md-9">
<p id="notice"><%= notice %></p>



<h1>Products</h1>

<table class="table table-striped"> 
   <thead class="thead-dark"> 
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Price</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
         <td><%= image_tag(product.image, style:'width:200px; height:auto') %></td>
        <td><b><%= product.title %></b></td>
        <td><%= product.price %></td>
       
        <td><%= link_to 'Show', product,class: 'btn btn-outline-success' %></td>
        <td><%= link_to 'Edit', edit_product_path(product),class: 'btn btn-warning btn-sm' , class: "fa fa-edit"%></td>
        <td><%= link_to 'Destroy', product, method: :delete,class: "fa fa-trash", data: { confirm: 'Are you sure?' } %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>

  <div class="card mt-3">
    <div class="card-header">
      Categories
    </div>
    <div class="card-body">
      <%= link_to 'All Products', products_path,class: 'btn btn-dark' %>

      <ul class="list-group">
        <% @categories.each do |category| %>
  <li class="list-group-item d-flex justify-content-between align-items-center"><%= link_to category.category,products_path(:cate => category.id), class: 'btn btn-outline-dark' %>
    <span class="badge bg-info rounded-pill"><%= category.products.count %></span>
  </li>

  <% end %>
  
</ul>
</div>
</div>
